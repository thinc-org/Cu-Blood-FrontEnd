{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.0.0-beta",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-beta",
    "babel-runtime": "^7.0.0-beta",
    "express": "^4.16.4",
    "moment": "^2.23.0",
    "next": "^7.0.2",
    "next-cookies": "^1.0.4",
    "next-i18next": "^0.19.0",
    "next-nprogress": "^1.4.0",
    "qrcode.react": "^0.9.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "react-text-truncate": "^0.13.1",
    "next-purgecss": "^3.0.0"
  },
  "scripts": {
    "next:dev": "next",
    "next:build": "next build",
    "postinstall": "yarn gencss",
    "heroku-postbuild": "yarn next:build",
    "next:start": "next start",
    "gencss": "postcss ./components/core/tw.css -o ./components/core/tailwind.css",
    "start:tw": "postcss ./components/core/tw.css -o ./components/core/tailwind.css -w",
    "start": "NODE_ENV=production node server.js",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "eject": "react-scripts eject",
    "go": "concurrently --kill-others \"yarn start:tw\" \"yarn next:dev\"",
    "full": "concurrently --kill-others \"yarn start:tw\" \"yarn next:start\"",
    "export": "yarn next:build | next export",
    "start:prod": "node server.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "babel-plugin-root-import": "^6.1.0",
    "concurrently": "^4.1.0",
    "cssnano": "^4.1.8",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "http-proxy-middleware": "^0.19.1",
    "postcss-cli": "^6.1.1",
    "postcss-easy-import": "^3.0.0",
    "tailwindcss": "^0.7.3"
  }
}
